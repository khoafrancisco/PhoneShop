@using PhoneShop.Models.Entities
@model ProductDetailsViewModel

<div class="container mt-5">
    <div class="row">
        <!-- Column for product images -->
        <div class="col-md-5">
            <div id="productCarousel" class="carousel slide">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img id="mainImage" src="~/img/products/@Model.MainImage" class="d-block w-100 rounded" alt="Product Image" loading="lazy">
                    </div>
                </div>
            </div>

            <!-- Thumbnail images below carousel -->
            <div id="thumbnailCarousel" class="mt-3 position-relative">
                <button class="btn btn-outline-secondary position-absolute start-0 top-50 translate-middle-y" id="prevThumb" type="button">
                    <i class="bi bi-chevron-left"></i>
                </button>

                <div class="d-flex overflow-hidden" id="thumbnailsContainer">
                    @if (Model.Medias != null && Model.Medias.Any())
                    {
                        @foreach (var media in Model.Medias)
                        {
                            <div class="p-1 flex-shrink-0">
                                <img style="height: 80px; width: auto; cursor: pointer;" src="~/img/products/@media.MediaURL"
                                     class="img-thumbnail" alt="Thumbnail" loading="lazy"
                                     onmouseover="updateMainImage('@media.MediaURL')" />
                            </div>
                        }
                    }
                </div>

                <button class="btn btn-outline-secondary position-absolute end-0 top-50 translate-middle-y" id="nextThumb" type="button">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </div>
        </div>

        <!-- Column for product details -->
        <div class="col-md-4">
            <h2 class="fw-bold">@Model.Name</h2>
            <p class="lead text-muted">@Model.Description</p>
            <p class="text-danger fs-4"><strong>@Model.Price.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</strong></p>
            <div class="d-grid gap-2 mt-4">
                <button class="btn btn-primary btn-lg" onclick="buyNow()">Mua ngay</button>
                <form asp-action="AddToCart" asp-controller="Cart" method="post">
                    <input type="hidden" name="productId" value="@Model.ProductID" />
                    <button type="submit" class="btn btn-secondary btn-lg">Thêm vào giỏ hàng</button>
                </form>
            </div>
        </div>

        <!-- Column for related products -->
        @if (Model.RelatedProducts != null && Model.RelatedProducts.Any())
        {
            <div class="col-md-3">
                <h5 class="fw-bold mt-3">Sản phẩm khác</h5>
                <div class="row g-3">
                    @foreach (var product in Model.RelatedProducts)
                    {
                        <div class="col-md-12">
                            <a asp-controller="Products" asp-action="ProductsDetails" asp-route-ProductID="@product.ProductID" class="text-decoration-none text-dark">
                                <div class="card h-100">
                                    <img src="~/img/products/@product.MainImage" class="card-img-top" alt="Related Product" loading="lazy">
                                    <div class="card-body">
                                        <h6 class="card-title">@product.Name</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

<script>
    function updateMainImage(imageUrl) {
        // Update the src of the main image with the hovered thumbnail's URL
        document.getElementById('mainImage').src = '/img/products/' + imageUrl;
    }

    const container = document.getElementById('thumbnailsContainer');
    const prevButton = document.getElementById('prevThumb');
    const nextButton = document.getElementById('nextThumb');
    const scrollAmount = 100;

    prevButton.addEventListener('click', () => {
        container.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    });

    nextButton.addEventListener('click', () => {
        container.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    });
</script>
