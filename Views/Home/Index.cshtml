@using PhoneShop.Models.Entities
@model List<PhoneShop.Models.Entities.Products>

@{
    ViewBag.Title = "Home Page";
}

<!-- Carousel Banner -->
<div id="homeCarousel" class="carousel slide full-width-carousel" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/social/iphone-banner5.png" class="d-block w-100" alt="Banner 1">
        </div>
        <div class="carousel-item">
            <img src="~/img/social/iphone-banner2.png" class="d-block w-100" alt="Banner 2">
        </div>
        <div class="carousel-item">
            <img src="~/img/social/iphone-banner3.png" class="d-block w-100" alt="Banner 3">
        </div>
        <div class="carousel-item">
            <img src="~/img/social/iphone-banner4.png" class="d-block w-100" alt="Banner 4">
        </div>
        <div class="carousel-item">
            <img src="~/img/social/iphone-banner1.png" class="d-block w-100" alt="Banner 5">
        </div>
        <div class="carousel-item">
            <img src="~/img/social/shop.png" class="d-block w-100" alt="Banner 6">
        </div>
    </div>
    <a class="carousel-control-prev" href="#homeCarousel" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#homeCarousel" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>

<style>
    .full-width-carousel .carousel-inner,
    .full-width-carousel .carousel-item img {
        width: 100vw;
        margin-left: calc(-50vw + 50%);
    }
</style>

<!-- Featured Products -->
<div class= mt-4></div>
<h2 class="text-center fw-bold text-primary mb-4">Sản phẩm nổi bật tại Minh Apple Store</h2>

<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var p in Model)
        {
            <div class="col">
                <a asp-controller="Products" asp-action="ProductsDetails" asp-route-ProductID="@p.ProductID"
                    class="text-decoration-none text-dark">
                    <div class="card h-100">
                        <img src="~/img/products/@p.Image"
                             class="card-img-top" loading="lazy" alt="@p.Name">
                        <div class="card-body">
                            <h5 class="card-title">@p.Name</h5>
                            <p class="card-text text-truncate single-line">@p.Description</p>

                            <p class="text-danger"><strong>@p.Price.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</strong></p>
                            <a asp-controller="Products" asp-action="ProductsDetails" asp-route-ProductID="@p.ProductID"
                                class="btn btn-primary">Chi tiết</a>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>



<div class="my-5">
    <h2 class="text-center fw-bold text-primary mb-4">Khách Hàng Đánh Giá Về Chúng Tôi</h2>
    <div id="customerReviewCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active">
                <div class="d-flex flex-wrap justify-content-center gap-4">
                    <div class="card shadow-lg" style="width: 22rem; border: none; border-radius: 10px;">
                        <img src="~/img/customers/customer1.jpg" class="card-img-top rounded-top" alt="Khách hàng 1">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">Nguyễn Văn An</h5>
                            <p class="card-text text-muted">"Sản phẩm chất lượng, giá cả hợp lý, dịch vụ tốt."</p>
                        </div>
                    </div>
                    <div class="card shadow-lg" style="width: 22rem; border: none; border-radius: 10px;">
                        <img src="~/img/customers/customer2.jpg" class="card-img-top rounded-top" alt="Khách hàng 2">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">Trần Thị Bình</h5>
                            <p class="card-text text-muted">"Mua hàng nhiều lần, không bao giờ thất vọng."</p>
                        </div>
                    </div>
                    <div class="card shadow-lg" style="width: 22rem; border: none; border-radius: 10px;">
                        <img src="~/img/customers/customer3.jpg" class="card-img-top rounded-top" alt="Khách hàng 3">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">Lê Văn Chiến</h5>
                            <p class="card-text text-muted">"Giá cả phù hợp, sản phẩm chính hãng."</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
                <div class="d-flex flex-wrap justify-content-center gap-4">
                    <div class="card shadow-lg" style="width: 22rem; border: none; border-radius: 10px;">
                        <img src="~/img/customers/customer4.jpg" class="card-img-top rounded-top" alt="Khách hàng 4">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">Phạm Thị Duyên</h5>
                            <p class="card-text text-muted">"Nhân viên hỗ trợ rất tốt, tư vấn nhiệt tình."</p>
                        </div>
                    </div>
                    <div class="card shadow-lg" style="width: 22rem; border: none; border-radius: 10px;">
                        <img src="~/img/customers/customer5.jpg" class="card-img-top rounded-top" alt="Khách hàng 5">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">Nguyễn Văn Anh Khoa</h5>
                            <p class="card-text text-muted">"Chất lượng sản phẩm đúng như quảng cáo."</p>
                        </div>
                    </div>
                    <div class="card shadow-lg" style="width: 22rem; border: none; border-radius: 10px;">
                        <img src="~/img/customers/customer6.jpg" class="card-img-top rounded-top" alt="Khách hàng 6">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">Trần Thị Hân</h5>
                            <p class="card-text text-muted">"Tôi đã giới thiệu nhiều bạn bè đến đây mua sắm."</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item">
                <div class="d-flex flex-wrap justify-content-center gap-4">
                    <div class="card shadow-lg" style="width: 22rem; border: none; border-radius: 10px;">
                        <img src="~/img/customers/customer7.jpg" class="card-img-top rounded-top" alt="Khách hàng 7">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">Lê Văn Giang</h5>
                            <p class="card-text text-muted">"Một trải nghiệm mua sắm tuyệt vời!"</p>
                        </div>
                    </div>
                    <div class="card shadow-lg" style="width: 22rem; border: none; border-radius: 10px;">
                        <img src="~/img/customers/customer8.jpg" class="card-img-top rounded-top" alt="Khách hàng 8">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">Phạm Thị Hồng</h5>
                            <p class="card-text text-muted">"Mua hàng ở đây rất an tâm, từ chất lượng sản phẩm đến thái độ phục vụ."</p>
                        </div>
                    </div>
                    <div class="card shadow-lg" style="width: 22rem; border: none; border-radius: 10px;">
                        <img src="~/img/customers/customer9.jpg" class="card-img-top rounded-top" alt="Khách hàng 9">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">Nguyễn Thị Uyên</h5>
                            <p class="card-text text-muted">"Dịch vụ giao hàng nhanh chóng, sản phẩm chất lượng."</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Điều khiển Carousel -->
        <button class="carousel-control-prev" type="button" data-bs-target="#customerReviewCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#customerReviewCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
