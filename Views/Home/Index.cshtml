@using PhoneShop.Models.Entities
@model List<PhoneShop.Models.Entities.Products>

@{
    ViewBag.Title = "Home Page";
}

<!-- Carousel Banner -->
<div id="homeCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/social/iphone-banner1.png" class="d-block w-100" alt="Banner 1">
        </div>
        <div class="carousel-item">
            <img src="~/img/social/iphone-banner2.png" class="d-block w-100" alt="Banner 2">
        </div>
        <div class="carousel-item">
            <img src="~/img/social/iphone-banner3.png" class="d-block w-100" alt="Banner 3">
        </div>
        <div class="carousel-item">
            <img src="~/img/social/iphone-banner4.png" class="d-block w-100" alt="Banner 4">
        </div>
        <div class="carousel-item">
            <img src="~/img/social/iphone-banner5.png" class="d-block w-100" alt="Banner 5">
        </div>
        <div class="carousel-item">
            <img src="~/img/social/shop.png" class="d-block w-100" alt="Banner 6">
        </div>
    </div>
    <a class="carousel-control-prev" href="#homeCarousel" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#homeCarousel" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>

<!-- Featured Products -->

<h2 class="text-center">Sản phẩm nổi bật tại Minh Apple Store</h2>

<div class="container mt-5">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var p in Model)
        {
            <div class="col">
                <a asp-controller="Products" asp-action="ProductsDetails" asp-route-ProductID="@p.ProductID"
                    class="text-decoration-none text-dark">
                    <div class="card h-100">
                        <img src="~/img/products/@p.Image"
                             class="card-img-top" loading="lazy" alt="@p.Name">
                        <div class="card-body">
                            <h5 class="card-title">@p.Name</h5>
                            <p class="card-text">@p.Description</p>
                            <p class="text-danger"><strong>@p.Price.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</strong></p>
                            <a asp-controller="Products" asp-action="ProductsDetails" asp-route-ProductID="@p.ProductID"
                                class="btn btn-primary">Chi tiết</a>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>




