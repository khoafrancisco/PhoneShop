@model IEnumerable<PhoneShop.Models.Entities.Products>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<a href="@Url.Action("Detail", "Product")" class="btn btn-primary">Thêm sản phẩm</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên sản phẩm</th>
            <th>Mô tả</th>
            <th>Giá</th>
            <th>Tồn kho</th>
            <th>Ngày tạo</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</td>
                <td>@product.Stock</td>
                <td>@product.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("Detail", "Product", new { id = product.ProductID })" class="btn btn-info btn-sm">Chi tiết</a>
                    <a href="@Url.Action("Detail", "Product", new { id = product.ProductID })" class="btn btn-warning btn-sm">Chỉnh sửa</a>
                    <button class="btn btn-danger btn-sm" onclick="deleteProduct(@product.ProductID)">Xóa</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function deleteProduct(id) {
        if (!confirm("Bạn có chắc muốn xóa sản phẩm này?")) return;

        $.ajax({
            url: `@Url.Action("Delete", "Product", new { area = "Admin" })/${id}`,
            type: 'DELETE',
            success: function (response) {
                alert(response.message);
                if (response.success) {
                    location.reload();
                }
            },
            error: function () {
                alert("Có lỗi xảy ra khi xóa sản phẩm. Vui lòng thử lại sau.");
            }
        });
    }
</script>
